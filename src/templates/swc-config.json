{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2022",
    "keepClassNames": true,
    "loose": false,
    "minify": {
      "compress": {
        "unused": true
      },
      "mangle": true
    },
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "module": {
    "type": "es6"
  },
  "minify": true,
  "isModule": true,
  "sourceMaps": true,
  "exclude": ["node_modules/**"]
}
